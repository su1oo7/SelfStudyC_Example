#include <stdio.h>

void main(){
	int i = 0, n;
	int multiply[9];

	printf("\n 1~9사이의 정수를 입력하세요: ");

	while (1) {
		scanf_s("%d", &n);
		if (n < 0 || n>9)
			printf("\n 1~9의 정수를 입력하세요: ");
		else
			break;
	}//구구단 할 수 있는 숫자만 입력 받으려는 안전장치

	printf("\n");

	for (i = 0; i < 9; i++) {
		multiply[i] = n * (i + 1);
		printf("%d*%d = %d \n", n, (i + 1), multiply[i]);
	}//문장자체를 multiply string으로 넣어버림

	getchar();
//https://shacoding.com/2019/07/28/c%EC%96%B8%EC%96%B4-getchar%ED%95%A8%EC%88%98%EB%A5%BC-%EC%89%BD%EA%B2%8C-%EC%9D%B4%ED%95%B4%ED%95%B4%EB%B3%B4%EC%9E%90/ 참고예정
}

#include <stdio.h>

void main() {
	int i, length = 0;
	char str[50];
	printf("\n문자열을 입력하세요 : ");
	gets_s(str);
	printf("\n입력된 문자열은 \n\""); 
	for (i = 0; str[i]; i++) {
		printf("%c", str[i]);
		length += 1;
	}
	printf("\"\n입니다.");
  /*
  출력결과가 
  입력된 문자열은 
  "str[]" 
  입니다.
  로 보이도록 한 것
  */
	printf("\n\n입력된 문자열의 길이 =%d \n", length);

	getchar();
}

#include <stdio.h>
long int fact(int);

int main() {
	
	fact(4);
	printf("%d", fact(3));

	return 1;
}

long int fact(int n) {
	int i,f = 1;

	if (n <=1)
		return 1;
	else{
		for (i = n; i > 1; i--) {	//책에는 for(i=n;i>=0;i++) 조건이었는데 오류남
			f = f * i;
		}
		return f;
	}
}
//재귀함수를 이용한 경우에 굉장히 간단해짐

long int fact(int n) {

	if (n <=1)
		return 1;
	else{
		return (n*fact(n-1));
	}
}
